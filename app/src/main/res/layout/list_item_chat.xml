<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeightLarge"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="100dp"
        android:layout_gravity="center_vertical"
        android:layout_width="48dp"
        android:layout_height="48dp">

    <ImageView
        android:background="@drawable/bg_no_pfp"
        android:id="@+id/imageViewProfilePicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#505050"
            android:lines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Name Lastname"
            android:id="@+id/textViewDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:lines="1"
            android:text="Hej det hÃ¤r var det senaste jag eller du skrev"
            android:id="@+id/textViewLastMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>