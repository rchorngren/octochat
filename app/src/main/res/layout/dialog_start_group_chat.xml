<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".messaging.ChatListActivity">

    <ListView
        android:layout_below="@id/divider"
        android:id="@+id/listFriendsDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:drawablePadding="12dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_start_group_chat"
        android:padding="16dp"
        android:id="@+id/textMembersToAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/textMembersToAdd"
        android:layout_marginHorizontal="16dp"
        android:background="@color/colorMessageBackgroundGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>